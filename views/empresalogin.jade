              button.button(type="submit") #{usuario.nombre}
          li
            a(href='/sesiones/cerrar') CERRAR SESION
              i(class='fa fa-fw fa-power-off')
    // Main
    section#main.wrapper
      .container
        header.major
          h2 Vacantes
          p
          form(method="post" action="/usuario/nuevavacante")
            input.form-control(type="text" name="usuarioID" value="#{usuario.idUsuario}" style='display:none')
            button.button(type="submit") Agregar
        div.row
          div.container
           table
                thead
                  th ID
                  th Nombre 
                  th Descripcion
                  th Sueldo
                  th Estado
                tbody
                  each elemento in vacantes
                    tr
                      td #{elemento.idVacante}
                      td #{elemento.nombrev}
                      td #{elemento.descripcion}
                      td #{elemento.sueldo}
                      td #{elemento.Estado}
