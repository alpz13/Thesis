          div.container
            form(method="post" action = "/usuario/busqueda")
              h4(style="display:none") IdUsuario #{usuario.idUsuario}
              input.form-control(type="text" name="idUsuario" style='display:none' value='#{usuario.idUsuario}')
              h4 Estado
              select.form-control(name="Estado")
                option(value="-1" selected) -----------
                each estado in estados
                  option(value="#{estado.idEstado}") #{estado.Estado}
              br
              h4 Carrera
              select.form-control(name="Carrera")
                option(value="-1" selected) -----------
                each carrera in carreras
                  option(value="#{carrera.idCarrera}") #{carrera.nombreCarrera}
              br
              h4 Ingreso
              select.form-control(name="Ingreso")
                option(value="-1" selected) -----------
                each sueldo in sueldos
                  option(value="#{sueldo}") #{sueldo}
              br
              button.button(type="submit" style="position:relative;left: 50%;" ) Buscar
