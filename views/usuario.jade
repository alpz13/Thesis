    style.
      #sortable1, #sortable2 {
      border: 1px solid #eee;
      width: 142px;
      min-height: 20px;
      list-style-type: none;
      margin: 0;
      padding: 5px 0 0 0;
      float: left;
      margin-right: 10px;
      }
      #sortable1 li, #sortable2 li {
      margin: 0 5px 5px 5px;
      padding: 5px;
      font-size: 1.2em;
      width: 120px;
      }
    script(language="JavaScript" type="text/javascript").
      function checkform ( form ) {
        if(form.ModNombre.value == "") {
          alert("Nombre del Usuario vacio");
          form.ModNombre.focus();
          return false;
          }
        if(form.ModContrasena.value == "") {
          alert("Contraseña vacia");
          form.ModContrasena.focus();
          return false;
        }
        if(form.ModReContrasena.value == "") {
          alert("Vuelve a ingresar tu contraseña");
          form.ModReContrasena.focus();
          return false;
        }
        if(form.ModContrasena.value != form.ModReContrasena.value) {
          alert("Las contraseñas no coinciden.");
          form.ModContrasena.focus();
          return false;
        } 
        else {
          return true;
        }
      }
      function resetform(){
        document.getElementById("AgregaActividad").reset();
      }
      $(function() {
      $( "#sortable1, #sortable2" ).sortable({
      connectWith: ".connectedSortable"
      }).disableSelection();
      });
  body
    // Header
    header#header
      nav#nav
        ul
          li
            form(method="post" action="/usuario/home")
              input.form-control(type="text" name="idUsuario" value="#{perfil.idUsuario}" style='display:none')
              button(class="button" type="submit") Inicio
          //li
            a(href='/userlogin') UserLogin
          //li
            a(href='elements.html') Elementson
          li
            a.button.special(href='/usuario/consultarperfil') #{perfil.nombre}
          li
            a(href='/sesiones/cerrar') CERRAR SESION
              i(class='fa fa-fw fa-power-off')
    // Main
    section#main.wrapper
      .container
        header.major
          h2 Usuario
          p
          button.button(type="button" class="modificar" data-toggle="modal" data-target="#MAA" id='boton-modificar') Modificar
        div.col.s6.offset-s6
          table
            tbody
              tr
                td Nombre
                td #{perfil.nombre}
              tr 
                td Contraseña 
                td #{perfil.password}
              tr 
                td Teléfono 
                td #{perfil.telefono}
              tr
                td Correo
                td #{perfil.correo}
              tr
                td Estado
                td #{perfil.Estado}
              tr
                td Carrera
                td #{perfil.nombreCarrera}
              tr
                td Edad
                td #{perfil.edad}
        div.row
            div(style="margin-left: 300px;" class="alex")
              ul#sortable1.connectedSortable(style="width: 300px; height: 200px; overflow: auto" name="HabTengo")
                if perfil.habilidades && perfil.habilidades.length
                  each habilidad in perfil.habilidades
                    li.ui-state-highlight(value="#{habilidad.idHabiliada}" class="id" id="#{habilidad.idHabiliada}") #{habilidad.habilidad}
                else
                  p.watermark No tienes habilidades
              ul#sortable2.connectedSortable(style="width: 300px; height: 200px; overflow: auto" name="HabNoTengo")
                if perfil.Thabilidades && perfil.Thabilidades.length
                  each habilidadT in perfil.Thabilidades
                    li.ui-state-highlight(value="#{habilidadT.idHabiliada}") #{habilidadT.habilidad}
                else
                  p.watermark No hay habilidades disponibles.
              div.row
                br
                button.button(class="modificar" style="margin-left: 200px") Actualizar
        div.col.s6.offset-s6  
    div(id='MAA' class='modal fade' role='dialog')
      div.modal-dialog
        form.col.s12(method="post" action = "/usuario/modificar" onsubmit="return checkform(this);")
          div.modal-header
            button(type='button' class='close' data-dismiss="modal") &times;
            h3.modal-title Modificar Usuario
          div.modal-body
              input.form-control(style="display:none" value="#{perfil.idUsuario}" name="ModidUsuario" id="idUsuario") 
              h4 Nombre
              input.form-control(type="text" name="ModNombre" id="MIDA")
              h4 Contraseña
              input.form-control(type="password" name="ModContrasena" size="58" id="MNA")
              h4 Re-Contraseña 
              input.form-control(type="password" name="ModReContrasena" id="MIDA")
              h4 Edad
              input.form-control(type="text" name="ModEdad")
              h4 Teléfono
              input.form-control(type="text" name="ModTelefono" size="58" id="MNA")
              h4 Correo
              input.form-control(type="text" name="ModCorreo" size="58" id="MNA")
              h4 Estado
              select.form-control(name="ModEstado" id="MRU")
                      each estado in estados
                        option(value="#{estado.idEstado}") #{estado.Estado}
              h4 Carrera
              select.form-control(name="ModCarrera" id="MRU")
                      each carrera in carreras
                        option(value="#{carrera.idCarrera}") #{carrera.nombreCarrera}
          div.modal-footer
              button.button(type="submit") Modificar
              button.button.alt(type="button" data-dismiss="modal") Cerrar
      